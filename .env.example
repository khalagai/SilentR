# Server Configuration
PORT=8000
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/sir-backend

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# Frontend URL (for CORS)
